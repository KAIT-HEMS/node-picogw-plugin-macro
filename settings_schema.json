{
	"title": "Macro Settings"
	,"type": "object"
    ,"id":"macro"
	,"properties": {
        "GET":{
            "type":"object"
            ,"properties":{
                "check_mode":{
                    "title":"GET /v1/macro/mode handler.\n The change of mode is stored in the plugin and can be listed by GET /v1/macro/mode?type=history[&mode=on|off|custom1..] (IFTTT format)"
                    ,"type":"string"
                    ,"format":"textarea"
                },
                "modePollingInterval":{
                    "title":"/v1/macro/mode check interval in SECONDS"
                    ,"type":"integer"
                },
                "getPeriodicalLog":{
                    "title":"Periodical logger to add log entries for GET /v1/macro/log"
                    ,"type":"string"
                    ,"format":"textarea"
                },
                "periodicalLogInterval":{
                    "title":"Periodical log interval in MINUTES. Aligned with the start of hour. Eg. 30 means checking on :0,:30 every hour. 20 means :0,:20,:40. 45 means :0 and :45."
                    ,"type":"integer"
                }
            }
        },
        "PUT":{
            "type":"object"
            ,"properties":{
                "put_mode":{
                    "title":"PUT /v1/macro/mode handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
            }
        }
    }
}
