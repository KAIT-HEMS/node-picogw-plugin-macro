{
	"title": "Macro Settings"
	,"type": "object"
    ,"id":"macro"
	,"properties": {
        "triggers":{
            "type":"object"
            ,"properties":{
                "check_mode":{
                    "title":"GET /v1/macro/mode handler"
                    ,"type":"string"
                    ,"format":"textarea"
                },
                "pollingInterval":{
                    "title":"Polling interval in seconds"
                    ,"type":"integer"
                }
            }
        },
        "actions":{
            "type":"object"
            ,"properties":{
                "on":{
                    "title":"POST /v1/macro/mode with body {mode:'on'} handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
                ,"off":{
                    "title":"POST /v1/macro/mode with body {mode:'off'} handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
                ,"custom1":{
                    "title":"POST /v1/macro/mode with body {mode:'custom1'} handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
                ,"custom2":{
                    "title":"POST /v1/macro/mode with body {mode:'custom2'} handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
                ,"custom3":{
                    "title":"POST /v1/macro/mode with body {mode:'custom3'} handler"
                    ,"type":"string"
                    ,"format":"textarea"
                }
            }
        }
    }
}
